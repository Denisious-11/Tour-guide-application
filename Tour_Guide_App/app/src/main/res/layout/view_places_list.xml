<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView

        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="380dp"
        android:paddingBottom="10dp"
        card_view:cardBackgroundColor="@color/ll_blue"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="18dp"
       >

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="135dp"
                    android:text="Place Name : "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/pname"
                    android:layout_width="215dp"
                    android:text="pName"
                    android:textSize="16dp"
                    android:layout_height="50dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
>
                <TextView
                    android:layout_width="135dp"
                    android:textStyle="bold"
                    android:text="Place Type : "
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/ptype"
                    android:layout_width="215dp"
                    android:text="ptype"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="135dp"
                    android:textStyle="bold"
                    android:text="Opening Time : "
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/o_time"
                    android:layout_width="215dp"
                    android:text="o_time"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="135dp"
                    android:text="Closing Time : "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/c_time"
                    android:layout_width="215dp"
                    android:text="c_time"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="135dp"
                    android:text="Min Amount : "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="215dp"
                    android:text="amount"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="135dp"
                    android:text="Latitude : "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/latitude"
                    android:layout_width="215dp"
                    android:text="latitude"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="135dp"
                    android:text="Longitude : "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/longitude"
                    android:layout_width="215dp"
                    android:text="longitude"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="135dp"
                    android:text="Website URL : "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/link"
                    android:layout_width="215dp"
                    android:text="link"
                    android:linksClickable="true"
                    android:autoLink="web"
                    android:textSize="16dp"
                    android:layout_height="50dp"/>
            </LinearLayout>











            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/p_id"
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:textSize="10dp"
                    android:layout_height="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:text="Delete"
                    android:background="@drawable/rounded_delete"
                    android:textColor="@color/white"
                    android:id="@+id/delete"
                    android:layout_marginBottom="3dp"></androidx.appcompat.widget.AppCompatButton>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>